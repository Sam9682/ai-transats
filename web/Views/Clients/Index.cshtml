@model IEnumerable<TransactsWeb.Models.Client>
@{
    ViewData["Title"] = "Gestion Clients";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> Gestion des Clients</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nouveau Client
    </a>
</div>

<!-- Recherche -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <select name="searchType" class="form-select">
                    <option value="NumClient" @(ViewBag.SearchType == "NumClient" ? "selected" : "")>Identifiant</option>
                    <option value="NomClient" @(ViewBag.SearchType == "NomClient" ? "selected" : "")>Nom</option>
                    <option value="PrenomClient" @(ViewBag.SearchType == "PrenomClient" ? "selected" : "")>Prénom</option>
                </select>
            </div>
            <div class="col-md-6">
                <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="fas fa-search"></i> Rechercher
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Liste des clients -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Téléphone</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model)
                    {
                        <tr>
                            <td>@client.NumClient</td>
                            <td>@client.NomClient</td>
                            <td>@client.PrenomClient</td>
                            <td>@client.TelClient</td>
                            <td>@client.MailClient</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", new { id = client.NumClient })" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-success" onclick="createAccount(@client.NumClient)">
                                        <i class="fas fa-plus-circle"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteClient(@client.NumClient)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function createAccount(clientId) {
            if (confirm('Créer un compte journalier pour ce client ?')) {
                $.post('@Url.Action("CreateAccount")', { clientId: clientId }, function() {
                    location.reload();
                });
            }
        }

        function deleteClient(clientId) {
            if (confirm('Êtes-vous sûr de vouloir supprimer ce client ?')) {
                $.post('@Url.Action("Delete")', { id: clientId }, function() {
                    location.reload();
                });
            }
        }
    </script>
}