@model TransactsWeb.Models.Employe
@{
    ViewData["Title"] = "Nouvel Employé";
}

<h2>Nouvel Employé</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="NomEmploye"></label>
        <input asp-for="NomEmploye" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="PrenomEmploye"></label>
        <input asp-for="PrenomEmploye" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="TelEmploye"></label>
        <input asp-for="TelEmploye" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Poste"></label>
        <input asp-for="Poste" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Salaire"></label>
        <input asp-for="Salaire" type="number" step="0.01" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Alias"></label>
        <input asp-for="Alias" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MotDePasse"></label>
        <input asp-for="MotDePasse" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Créer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
